# Copy to .env and fill in real values. Do not commit .env.

# Server
SERVER_PORT=8080

# PostgreSQL â€” for local run use localhost; Docker Compose overrides to db:5432
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/society_app
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password

# Auth (JWT + OTP)
JWT_SECRET=change-me-min-32-chars-for-local-dev
JWT_ACCESS_TTL_MIN=15
JWT_REFRESH_TTL_DAYS=7
OTP_EXPIRY_MIN=10
OTP_LENGTH=6

# 2Factor.in SMS OTP (optional; leave empty to log OTP only)
TWO_FACTOR_API_KEY=
